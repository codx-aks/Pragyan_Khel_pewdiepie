<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0D0F">

    <!-- Back Button -->
    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:text="← Back"
        android:textColor="#CCCCCC"
        android:textSize="12sp"
        android:backgroundTint="#1A1A1F"
        android:paddingHorizontal="16dp"
        android:layout_margin="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Video Title -->
    <TextView
        android:id="@+id/tvVideoPath"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="video.mp4"
        android:textColor="#AAAAAA"
        android:textSize="11sp"
        android:singleLine="true"
        android:ellipsize="middle"
        android:layout_margin="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintEnd_toStartOf="@id/btnShare"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"/>

    <!-- Share Button -->
    <Button
        android:id="@+id/btnShare"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:text="Share"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:backgroundTint="#555555"
        android:paddingHorizontal="16dp"
        android:layout_margin="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Video Player -->
    <FrameLayout
        android:id="@+id/videoContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#000000"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintBottom_toTopOf="@id/controlBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cardMetadata">

        <VideoView
            android:id="@+id/videoView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"/>

        <ProgressBar
            android:id="@+id/progressLoading"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:indeterminateTint="#00E5FF"/>

    </FrameLayout>

    <!-- Metadata Card (right panel) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardMetadata"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:cardBackgroundColor="#1A1A1F"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintBottom_toTopOf="@id/controlBar"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RECORDING METADATA"
                android:textColor="#00E5FF"
                android:textSize="10sp"
                android:letterSpacing="0.15"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FPS"
                android:textColor="#666666"
                android:textSize="9sp"/>
            <TextView
                android:id="@+id/tvMetaFps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="—"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RESOLUTION"
                android:textColor="#666666"
                android:textSize="9sp"/>
            <TextView
                android:id="@+id/tvMetaResolution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="—"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ISO"
                android:textColor="#666666"
                android:textSize="9sp"/>
            <TextView
                android:id="@+id/tvMetaIso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="—"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SHUTTER SPEED"
                android:textColor="#666666"
                android:textSize="9sp"/>
            <TextView
                android:id="@+id/tvMetaShutter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="—"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EXPOSURE MODE"
                android:textColor="#666666"
                android:textSize="9sp"/>
            <TextView
                android:id="@+id/tvMetaExposureMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="—"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DURATION"
                android:textColor="#666666"
                android:textSize="9sp"/>
            <TextView
                android:id="@+id/tvMetaDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="—"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RECORDED AT"
                android:textColor="#666666"
                android:textSize="9sp"/>
            <TextView
                android:id="@+id/tvMetaTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="—"
                android:textColor="#AAAAAA"
                android:textSize="10sp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Control Bar -->
    <LinearLayout
        android:id="@+id/controlBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#111116"
        android:paddingHorizontal="16dp"
        android:paddingVertical="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cardMetadata">

        <!-- Seek bar row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvCurrentTime"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textColor="#AAAAAA"
                android:textSize="11sp"
                android:fontFamily="monospace"/>

            <SeekBar
                android:id="@+id/seekbarPlayback"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:progressTint="#00E5FF"
                android:thumbTint="#00E5FF"
                android:layout_marginHorizontal="8dp"/>

            <TextView
                android:id="@+id/tvTotalTime"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textColor="#AAAAAA"
                android:textSize="11sp"
                android:fontFamily="monospace"
                android:gravity="end"/>

        </LinearLayout>

        <!-- Buttons row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnRestart"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="⏮"
                android:textSize="16sp"
                android:backgroundTint="#222228"
                android:layout_marginEnd="12dp"
                android:paddingHorizontal="16dp"/>

            <Button
                android:id="@+id/btnPlay"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:text="▶  Play"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:backgroundTint="#2196F3"
                android:enabled="false"/>

            <Button
                android:id="@+id/btnOpenGallery"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Open in Gallery"
                android:textSize="11sp"
                android:textColor="#CCCCCC"
                android:backgroundTint="#222228"
                android:layout_marginStart="12dp"
                android:paddingHorizontal="16dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
