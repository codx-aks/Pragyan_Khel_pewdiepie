<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0D0F"
    tools:context=".MainActivity">

    <!-- ── Left Panel: Controls ── -->
    <LinearLayout
        android:id="@+id/panelLeft"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#1A1A1F"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/divider"
        app:layout_constraintWidth_percent="0.35">

        <!-- App Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⚡ HIGH SPEED CAM"
            android:textColor="#00E5FF"
            android:textSize="13sp"
            android:textStyle="bold"
            android:letterSpacing="0.15"
            android:layout_marginBottom="12dp"/>

        <!-- Camera capability info -->
        <TextView
            android:id="@+id/tvCameraInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detecting camera..."
            android:textColor="#888888"
            android:textSize="10sp"
            android:background="#111116"
            android:padding="8dp"
            android:layout_marginBottom="16dp"/>

        <!-- FPS Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FRAME RATE"
            android:textColor="#888888"
            android:textSize="10sp"
            android:letterSpacing="0.15"
            android:layout_marginBottom="4dp"/>

        <Spinner
            android:id="@+id/spinnerFps"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/spinner_bg"
            android:layout_marginBottom="12dp"/>

        <!-- Resolution Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RESOLUTION"
            android:textColor="#888888"
            android:textSize="10sp"
            android:letterSpacing="0.15"
            android:layout_marginBottom="4dp"/>

        <Spinner
            android:id="@+id/spinnerResolution"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/spinner_bg"
            android:layout_marginBottom="16dp"/>

        <!-- Manual Exposure Toggle -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="MANUAL EXPOSURE"
                android:textColor="#888888"
                android:textSize="10sp"
                android:letterSpacing="0.15"/>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchManualExposure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"/>
        </LinearLayout>

        <!-- Manual Controls (ISO + Shutter) -->
        <LinearLayout
            android:id="@+id/layoutManualControls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="#111116"
            android:padding="12dp"
            android:layout_marginBottom="12dp">

            <!-- ISO -->
            <TextView
                android:id="@+id/tvIsoValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ISO: 800"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <SeekBar
                android:id="@+id/seekIso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progressTint="#00E5FF"
                android:thumbTint="#00E5FF"
                android:layout_marginBottom="12dp"/>

            <!-- Shutter Speed -->
            <TextView
                android:id="@+id/tvShutterValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shutter: 1/240 s"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <SeekBar
                android:id="@+id/seekShutter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progressTint="#00E5FF"
                android:thumbTint="#00E5FF"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1/4000s ◀──────────────▶ 1/30s"
                android:textColor="#555555"
                android:textSize="9sp"
                android:gravity="center"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- Note about manual controls in HS mode -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⚠ Manual ISO/shutter may be limited in high-speed mode on some devices."
            android:textColor="#FF9800"
            android:textSize="9sp"
            android:layout_marginBottom="8dp"/>

    </LinearLayout>

    <!-- Divider -->
    <View
        android:id="@+id/divider"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#222228"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/panelRight"
        app:layout_constraintWidth_percent="0.35"/>

    <!-- ── Right Panel: Viewfinder + Recording ── -->
    <FrameLayout
        android:id="@+id/panelRight"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="#050507"
        app:layout_constraintStart_toEndOf="@id/panelLeft"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- No-preview placeholder -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="24dp">

            <!-- Big recording area -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#0A0A0F">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="[ NO LIVE PREVIEW ]\n\nCamera records directly\nto storage at high speed.\nPreview would limit FPS."
                    android:textColor="#333344"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:lineSpacingMultiplier="1.5"/>

                <!-- Recording indicator overlay -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp">

                    <View
                        android:id="@+id/recordingIndicator"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/red_dot"
                        android:visibility="invisible"/>

                    <TextView
                        android:id="@+id/tvTimer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00"
                        android:textColor="#FF4444"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="monospace"
                        android:layout_marginStart="8dp"
                        android:visibility="invisible"/>
                </LinearLayout>

            </FrameLayout>

            <!-- Status bar -->
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Initializing..."
                android:textColor="#888888"
                android:textSize="12sp"
                android:gravity="center"
                android:padding="8dp"/>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/btnRecord"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="⏺  RECORD"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:backgroundTint="#2196F3"
                    android:layout_marginEnd="8dp"
                    android:enabled="false"/>

                <Button
                    android:id="@+id/btnPlayback"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="▶  PLAYBACK"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:backgroundTint="#4CAF50"
                    android:layout_marginStart="8dp"/>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
